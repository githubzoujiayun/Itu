<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sys_branch_radios">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_middle_bg</item>
        <item name="android:button">@drawable/button_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="setting_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/anim_set_down_in</item>
        <item name="android:windowExitAnimation">@anim/anim_set_down_out</item>
	</style>
	<style name="share_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/anim_share_down_in</item>
        <item name="android:windowExitAnimation">@anim/anim_share_down_out</item>
	</style>
	<style name="input_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/popup_search_show</item>
        <item name="android:windowExitAnimation">@anim/popup_search_hide</item>
	</style>
	<style name="vertify_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/anim_rotate_in</item>
        <item name="android:windowExitAnimation">@anim/anim_rotate_out</item>
	</style>
	<style name="cipher_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/anim_zoom_center_in</item>
        <item name="android:windowExitAnimation">@anim/anim_zoom_center_out</item>
	</style>
	<style name="load_animation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/loading_in</item>
        <item name="android:windowExitAnimation">@anim/loading_out</item>
	</style>
	
	<style name="StyleBarTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>

</resources>
